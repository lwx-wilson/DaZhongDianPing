<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/title_actionBar"
    android:orientation="horizontal"
    android:background="#FF6633"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <LinearLayout
        android:id="@+id/cityContainer"
        android:orientation="horizontal"
        android:layout_width="80dp"
        android:gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"
            android:text="广州"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="3dp"
            android:background="@drawable/title_home_arrow_down_normal"/>

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/search_shop"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/title_search_item"
        android:layout_height="35dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/home_search"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#60333333"
            android:text="输入商户名、地点"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_add"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center">
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/home_navibar_icon_add"/>
    </LinearLayout>

</LinearLayout>
