<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#ffffff">

    <com.liang.administrator.dazhongdianping.view.CircleImageView
        android:id="@+id/detail_list_imageView_picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="5dp"
        android:src="@mipmap/ic_launcher"/>
    
    <LinearLayout
        android:layout_toEndOf="@+id/detail_list_imageView_picture"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="20dp">

            <TextView
                android:id="@+id/detail_list_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:text="用户名"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/detail_list_textView_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:text="日期"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:text="打分"/>

            <ImageView
                android:id="@+id/detail_list_rating"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/movie_star50"/>

            <TextView
                android:id="@+id/detail_list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人均价格"/>

        </LinearLayout>

        <TextView
            android:id="@+id/detail_list_textView_detail"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="评价"
            android:maxLines="2"/>
        
        <LinearLayout
            android:id="@+id/detail_list_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/detail_list_imageView01"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:id="@+id/detail_list_imageView02"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:id="@+id/detail_list_imageView03"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_launcher"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
