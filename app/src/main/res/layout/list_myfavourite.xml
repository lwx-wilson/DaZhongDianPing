<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_marginBottom="8dp"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/list_myfavourite_imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher"/>


    <LinearLayout
        android:id="@+id/list_myfavourite_linearLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/list_myfavourite_imageView"
        android:gravity="center_vertical">
    <TextView
        android:id="@+id/list_myfavourite_shopName"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="店铺名称"/>

    <TextView
        android:id="@+id/list_myfavourite_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="00km"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/list_myfavourite_linearLayout01"
        android:layout_toEndOf="@+id/list_myfavourite_imageView">
    <TextView
        android:id="@+id/list_myfavourite_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="14sp"
        android:text="折扣"/>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_toEndOf="@+id/list_myfavourite_imageView"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/list_myfavourite_cost"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/square_left_subcolor"
        android:textSize="15sp"
        android:text="100元"/>

    <TextView
        android:id="@+id/list_myfavourite_count"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/list_myfavourite_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="已售0000"/>
    </LinearLayout>
    
</RelativeLayout>
